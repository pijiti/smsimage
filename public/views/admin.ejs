<!-- views/signup.ejs -->
<!doctype html>
<html ng-app="sms">
<head>
    <title>Create a new admin</title>
    <link rel="stylesheet" href="../css/bootstrap.min.css"> <!-- load bootstrap css -->
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"> <!-- load fontawesome -->

    <style>
        body        { padding-top:20px; }
    </style>
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="container-fluid">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>                        
            </button>
            <a class="navbar-brand" href="#">SMS App</a>
        </div>
        <div>
          <div class="collapse navbar-collapse" id="myNavbar">
            <ul class="nav navbar-nav">
              <li><a href="/admin">Admin management</a></li>
              <li><a href="/message">Messages</a></li>
              <li><a href="/upload">Upload</a></li>
              <li><a href="/logout" class="pull-right">Logout</a></li>
            </ul>
          </div>
        </div>
      </div>
    </nav>    
    <div class="container" style="margin-top: 30px"  ng-controller="stationController">

        <div  class="col-sm-6 col-sm-offset-3">

            <h1><span class="fa fa-sign-in"></span>Create a new station admin</h1>

            <div class="alert alert-danger" ng-if="error">{{error}}</div>
          
            <!-- LOGIN FORM -->
            <form ng-submit="create()">
                <div class="form-group">
                    <label>First Name</label>
                    <input type="text" ng-model="admin.first_name" class="form-control" name="first_name" required>
                </div>
                <div class="form-group">
                    <label>Last Name</label>
                    <input type="text" ng-model="admin.last_name" class="form-control" name="last_name" required>
                </div>
                <div class="form-group">
                    <label>Email</label>
                    <input type="text" ng-model="admin.email" class="form-control" name="email" required>
                </div>
                <div class="form-group">
                    <label>Password</label>
                    <input type="password" ng-model="admin.password" class="form-control" name="password" required>
                </div>
                <div class="form-group">
                    <label>Station ID</label>
                    <input type="number" ng-model="admin.station_id" class="form-control" name="station_id" required>
                </div>
                <button type="submit" class="btn btn-success btn-lg col-md-offset-5">Create</button>
            </form>

        </div>
        <hr>
        <div class="table-responsive">
            <table class="table table-bordered table-hover">
                <thead>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Station ID</th>
                    <th>Action</th>
                </thead>
                <tbody>
                    <tr ng-repeat = "station_admin in station_admins">
                        <td>{{station_admin.first_name}}</td>
                        <td>{{station_admin.last_name}}</td>
                        <td>{{station_admin.email}}</td>
                        <td>{{station_admin.phone}}</td>
                        <td>{{station_admin.station_id}}</td>
                        <td><a ng-click="toggleActive(station_admin)">{{station_admin.activated ? 'Deactivate' : 'Activate'}}</a></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <script type="text/javascript" src="../js/angular.min.js"></script>
    <script src="../js/ng-file-upload-shim.js"></script>
    <script src="../js/ng-file-upload.js"></script>
    <script type="text/javascript" src="../js/controllers.js"></script>
</body>
</html>